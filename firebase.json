{
  "hosting": {
    "public": "template",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "default",
          "region": "us-central1",
          "target": "template"
        }
      } 
    ]
  }
}